
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct PolicyHolder {
    char name[50];
    int age;
    int policy_number;
    struct PolicyHolder *next;
} PolicyHolder;

PolicyHolder* createNode(char name[], int age, int policy_number) {
    PolicyHolder *newNode = (PolicyHolder*)malloc(sizeof(PolicyHolder));
    strcpy(newNode->name, name);
    newNode->age = age;
    newNode->policy_number = policy_number;
    newNode->next = NULL;
    return newNode;
}

PolicyHolder* insertEnd(PolicyHolder *head, char name[], int age, int policy_number) {
    PolicyHolder *newNode = createNode(name, age, policy_number);
    if (head == NULL)
        return newNode;
    PolicyHolder *temp = head;
    while (temp->next)
        temp = temp->next;
    temp->next = newNode;
    return head;
}

void displayMinors(PolicyHolder *head) {
    PolicyHolder *temp = head;
    printf("\nMinor Policy Holders (Age < 18):\n");
    while (temp) {
        if (temp->age < 18)
            printf("Name: %s, Age: %d, Policy No: %d\n", temp->name, temp->age, temp->policy_number);
        temp = temp->next;
    }
}

PolicyHolder* deleteByPolicyNumber(PolicyHolder *head, int key) {
    if (head == NULL) return NULL;
    if (head->policy_number == key) {
        PolicyHolder *temp = head;
        head = head->next;
        free(temp);
        return head;
    }
    PolicyHolder *curr = head;
    while (curr->next && curr->next->policy_number != key)
        curr = curr->next;
    if (curr->next) {
        PolicyHolder *temp = curr->next;
        curr->next = temp->next;
        free(temp);
    }
    return head;
}

void displayAll(PolicyHolder *head) {
    PolicyHolder *temp = head;
    printf("\nAll Policy Holders:\n");
    while (temp) {
        printf("Name: %s, Age: %d, Policy No: %d\n", temp->name, temp->age, temp->policy_number);
        temp = temp->next;
    }
}

int main() {
    PolicyHolder *head = NULL;
    int n, age, policy_no, del_no;
    char name[50];

    printf("Enter number of policy holders: ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++) {
        printf("\nEnter name, age, policy number: ");
        scanf("%s %d %d", name, &age, &policy_no);
        head = insertEnd(head, name, age, policy_no);
    }

    displayMinors(head);

    printf("\nEnter policy number to delete: ");
    scanf("%d", &del_no);
    head = deleteByPolicyNumber(head, del_no);

    displayAll(head);

    return 0;
}